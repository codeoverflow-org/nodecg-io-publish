{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "host": {
            "type": "string",
            "description": "Host (hostname/ip) of the GameTTS instance."
        },
        "useHttps": {
            "type": "boolean",
            "default": false,
            "description": "Whether the server should be contacted using https instead of http."
        }
    },
    "required": ["host"]
}
